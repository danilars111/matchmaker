<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      https://maven.apache.org/xsd/settings-1.0.0.xsd">
    <localRepository/>
    <interactiveMode/>
    <usePluginRegistry/>
    <offline/>
    <pluginGroups/>
    <servers/>
    <mirrors>
        <!--
          This is our new magic trick! Instead of trying to disable mirrors,
          we're creating our own catch-all mirror that points directly to Maven Central.
          This should override any corporate mirror trying to redirect you.
        -->
        <mirror>
            <id>public-maven-central</id>
            <mirrorOf>*</mirrorOf>
            <name>Public Maven Central</name>
            <url>https://repo.maven.apache.org/maven2/</url>
        </mirror>
    </mirrors>
    <proxies/>
    <profiles>
        <profile>
            <id>default-profile</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>maven-central-repo</id> <!-- Different ID to avoid conflicts -->
                    <name>Maven Central</name>
                    <url>https://repo.maven.apache.org/maven2/</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>maven-central-plugin-repo</id> <!-- Different ID to avoid conflicts -->
                    <name>Maven Central</name>
                    <url>https://repo.maven.apache.org/maven2/</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>default-profile</activeProfile>
    </activeProfiles>
</settings>

